@model VideoGameStore.Models.Game

@{
    ViewData["Title"] = "Delete A Game Listing";
}
<title>@ViewData["Title"]</title>
<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Game Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.gameTitle)
        </dd>
        <dt class="col-sm-2">
            Game Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.gameDescription)
        </dd>
        <dt class="col-sm-2">
            Game Release Date
        </dt>
        <dt class="col-sm-2">
            Game Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.gamePrice)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.gameReleaseDate)
        </dd>
        <dt class="col-sm-2">
            Game Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.gameCategory)
        </dd>
        <dt class="col-sm-2">
            Game Developer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.gameDeveloper)
        </dd>
        <dt class="col-sm-2">
            Game Publisher
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.gamePublisher)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="gameGuid" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
