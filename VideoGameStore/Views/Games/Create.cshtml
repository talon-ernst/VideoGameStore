@model VideoGameStore.Models.Game

@{
    ViewData["Title"] = "Create A Game Listing";
}
<title>@ViewData["Title"]</title>
<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="gameTitle" class="control-label">Game Title</label>
                <input asp-for="gameTitle" class="form-control" />
                <span asp-validation-for="gameTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gameDescription" class="control-label">Game Description</label>
                <input asp-for="gameDescription" class="form-control" />
                <span asp-validation-for="gameDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gameReleaseDate" class="control-label">Game Release Date</label>
                <input asp-for="gameReleaseDate" class="form-control" />
                <span asp-validation-for="gameReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gameCategory" class="control-label">Game Category</label>
                <input asp-for="gameCategory" class="form-control" />
                <span asp-validation-for="gameCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gameDeveloper" class="control-label">Game Developer</label>
                <input asp-for="gameDeveloper" class="form-control" />
                <span asp-validation-for="gameDeveloper" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gamePublisher" class="control-label">Game Publisher</label>
                <input asp-for="gamePublisher" class="form-control" />
                <span asp-validation-for="gamePublisher" class="text-danger"></span>
            </div>         
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
